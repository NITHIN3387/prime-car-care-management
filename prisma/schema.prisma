generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Users {
  id           String @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  mobileNumber String    @unique
  password     String
  role         String
}

model Services {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  serviceName String
  cost        Int
}

model Customers {
  id           String @id @default(auto()) @map("_id") @db.ObjectId
  customerName String
  mobileNumber String    @unique
}
